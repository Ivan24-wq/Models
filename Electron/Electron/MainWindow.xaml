<Window x:Class="Electron.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Electron"
        mc:Ignorable="d"
        Title="Математическая модель" Height="450" Width="800">
    <Grid>
        <Border Background="#3f51b5" Height="60" VerticalAlignment="Top">
            <TextBlock Text="Движение релятивистской заряженной частицы" 
                       Foreground="White" 
                       FontSize="24" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       FontWeight="Bold"/>
        </Border>

        <Grid Margin="0, 60, 0, 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#eee">
                <StackPanel Margin="10">
                    <TextBlock Text="Параметры частицы"
               FontWeight="Bold"
               Margin="0, 0, 0, 10"
               FontSize="15"/>

                    <TextBlock Text="Масса"
               FontSize="13"/>
                    <TextBox Margin="0, 0, 0, 10"/>

                    <TextBlock Text="Заряд частицы"
               FontSize="13"/>
                    <TextBox Margin="0, 0, 0, 10"/>

                    <TextBlock Text="Начальное положение"
               FontSize="13"/>
                    <TextBox Margin="0, 0, 0, 10"/>

                    <TextBlock Text="Начальная скорость"
               FontSize="13"/>
                    <TextBox Margin="0, 0, 0, 10"/>

                    <TextBlock Text="Параметры поля"
               FontSize="15"
               Margin="0, 0, 0, 10"
               FontWeight="Bold"/>

                    <TextBlock Text="Данные поля E(x, y, z)"
               FontSize="13"/>
                    <TextBox Margin="0, 0, 0, 10"/>

                    <TextBlock Text="Параметры интегрирования"
               FontSize="15"
               FontWeight="Bold"
               Margin="0, 0, 0, 10"/>

                    <TextBlock Text="Время моделирования"
               FontSize="13"/>
                    <TextBox Margin="0, 0, 0, 10"/>

                    <TextBlock Text="Шаг по времени"
               FontSize="13"/>
                    <TextBox Margin="0, 0, 0, 10"/>
                </StackPanel>
            </ScrollViewer>
            

            <Grid Grid.Column="1" Background="#fff" Margin="10">
                <TextBlock Text="График движения частицы"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           Foreground="Gray"
                           FontSize="18"/>
            </Grid>

        </Grid>
    </Grid>
</Window>
